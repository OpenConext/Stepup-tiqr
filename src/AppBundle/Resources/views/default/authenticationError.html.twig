{% extends 'base.html.twig' %}

{% block title %}
    {{ 'login.title'|trans }}
{% endblock %}

{% block header_title %}
    {{ 'login.title'|trans }}
{% endblock %}

{% block body %}
    <div class="alert alert-warning" role="alert">
        <br/>

        {% if userNotFound is defined and userNotFound %}
            <h4 class="alert-heading">{{ 'login.error.invalid_user' | trans }}</h4>
        {% endif %}

        {% if permanentlyBlocked %}
            <p>{{ 'login.error.account_blocked' | trans }}</p>
        {% endif %}

        {% if temporarilyBlocked %}
            <p>{{ 'login.error.account_temporarily_blocked' | trans }}</p>
        {% endif %}

    </div>
{% endblock %}
